# CORTEX Environment Configuration
# Copy this file to .env and update with your secure values

# NAS Configuration (Terramaster)
NAS_IP=192.168.1.100  # Replace with your Terramaster NAS IP
NAS_HOSTNAME=terramaster.local

# Database Configuration (Running on NAS)
POSTGRES_PASSWORD=ChangeThisToSecurePassword
POSTGRES_HOST=terramaster.local
POSTGRES_PORT=5432
NEO4J_PASSWORD=ChangeThisToSecurePassword
NEO4J_HOST=terramaster.local
NEO4J_BOLT_PORT=7687
NEO4J_HTTP_PORT=7474

# Redis Configuration (Running on NAS)
REDIS_HOST=terramaster.local
REDIS_PORT=6379
REDIS_PASSWORD=

# n8n Configuration
N8N_ENCRYPTION_KEY=ChangeThisToRandomString32Chars
N8N_JWT_SECRET=ChangeThisToRandomString32Chars

# Monitoring Configuration
INFLUX_PASSWORD=ChangeThisToSecurePassword
INFLUX_TOKEN=ChangeThisToSecureToken  # Get from InfluxDB UI
INFLUX_HOST=host.docker.internal  # For native Windows InfluxDB
INFLUX_PORT=8086
GRAFANA_PASSWORD=ChangeThisToSecurePassword

# Flowise Configuration
FLOWISE_USERNAME=admin
FLOWISE_PASSWORD=ChangeThisToSecurePassword

# Open WebUI Configuration
WEBUI_SECRET_KEY=ChangeThisToRandomString32Chars

# Magi Machine Configuration
# Uncomment and set based on which machine this is running on
# MACHINE_ID=melchior-cad    # Gold - CAD/3D Processing (RTX 3090, 64GB)
# MACHINE_ID=balthazar-ai    # Frankincense - AI Models (RTX A5000, 128GB)
# MACHINE_ID=caspar-code     # Myrrh - Code/Data (RTX A4000, 128GB)

# Resource Limits (adjust based on your Magi machine)
# POSTGRES_MAX_CONNECTIONS=200
# REDIS_MAX_MEMORY=4gb
# NEO4J_HEAP_SIZE=4G

# External AI Services (Optional)
# OPENAI_API_KEY=your-openai-key
# ANTHROPIC_API_KEY=your-anthropic-key
# DEEPSEEK_API_KEY=your-deepseek-key

# Local AI Models Configuration
# OLLAMA_HOST=http://balthazar.local:11434  # Running on Balthazar
# LOCALAI_HOST=http://balthazar.local:8080  # Running on Balthazar

# Vector Database (Running on NAS)
QDRANT_HOST=terramaster.local
QDRANT_PORT=6333
QDRANT_API_KEY=

# Network Configuration
CORTEX_NETWORK=self-hosted-ai-starter-kit_demo
