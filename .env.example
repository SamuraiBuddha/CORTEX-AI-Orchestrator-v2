# CORTEX Environment Configuration
# Copy this file to .env and update with your secure values

# Database Configuration
POSTGRES_PASSWORD=ChangeThisToSecurePassword
NEO4J_PASSWORD=ChangeThisToSecurePassword

# n8n Configuration
N8N_ENCRYPTION_KEY=ChangeThisToRandomString32Chars
N8N_JWT_SECRET=ChangeThisToRandomString32Chars

# Monitoring Configuration
INFLUX_PASSWORD=ChangeThisToSecurePassword
INFLUX_TOKEN=ChangeThisToSecureToken
GRAFANA_PASSWORD=ChangeThisToSecurePassword

# Flowise Configuration
FLOWISE_USERNAME=admin
FLOWISE_PASSWORD=ChangeThisToSecurePassword

# Open WebUI Configuration
WEBUI_SECRET_KEY=ChangeThisToRandomString32Chars

# Machine-Specific Configuration
# Uncomment and set based on which machine this is running on
# MACHINE_ID=machine1  # Options: machine1, machine2, machine3
# MACHINE_GPU=rtx3090  # Options: rtx3090, rtxa5000, rtxa4000

# Resource Limits (adjust based on your machine)
# POSTGRES_MAX_CONNECTIONS=200
# REDIS_MAX_MEMORY=4gb
# NEO4J_HEAP_SIZE=4G

# External AI Services (Optional)
# OPENAI_API_KEY=your-openai-key
# ANTHROPIC_API_KEY=your-anthropic-key
# DEEPSEEK_API_KEY=your-deepseek-key

# Local AI Models Configuration
# OLLAMA_HOST=http://host.docker.internal:11434
# LOCALAI_HOST=http://host.docker.internal:8080